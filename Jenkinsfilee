pipeline {
    agent any
    tools {
        maven 'maven-3.6.3' 
    }
    stages {
        stage('Example') {
            steps {
                sh 'git clone https://github.com/ruchi672/projectRepository.git'
            }
        }
	
	stage('Sonar Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
               sh 'mvn -X verify sonar:sonar -Dsonar.projectKey=sonar'
             }
            }
        }
    }
     post {
        always {
            cleanWs()
        }
    }
}
