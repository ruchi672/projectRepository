pipeline {
    agent any
    stages {
        stage('Git Clone') {
            steps {
               sh 'git clone https://github.com/ruchi672/projectRepository.git'
            }
        }
	
	stage('Maven-Clean') {
            steps {
                sh 'mvn clean'
            }
        }
	stage('Maven-Compile') {
            steps {
                sh 'mvn compile'
            }
        }
	stage('Maven-Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
