pipeline {
    agent any
    stages {
        stage('Git Clone') {
            steps {
               sh 'git clone https://github.com/ruchi672/projectRepository.git'
            }
        }
	
	stage('Sonar Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                     sh 'mvn clean package sonar:sonar'
                     }
                  }
         }
  stage('Quality Gate Analysis') {
            steps {
	       waitForQualityGate abortPipeline: true
	    }
         }
    }
    post {
        always {
            cleanWs()
        }
    }
}
